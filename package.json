    "@types/ws": "^8.5.8",
    "eslint": "^9.16.0",
    "typescript-eslint": "^8.18.0",
    "@eslint/js": "^9.16.0",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.3"
  },
